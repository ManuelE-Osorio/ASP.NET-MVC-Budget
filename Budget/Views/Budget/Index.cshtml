@model List<Budget.Models.Transaction>

@{
    ViewData["Title"] = "Budget App";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor( p => p.FirstOrDefault()!.Name)
            </th>
            <th>
                @Html.DisplayNameFor( p => p.FirstOrDefault()!.Description)
            </th>
            <th>
                @Html.DisplayNameFor( p => p.FirstOrDefault()!.Date)
            </th>
            <th>
                @Html.DisplayNameFor( p => p.FirstOrDefault()!.Amount)
            </th>
            <th>
                @Html.DisplayNameFor( p => p.FirstOrDefault()!.Category)
            </th>
        </tr>
    </thead>
    <tbody>

    @foreach(var element in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor( p => element.Name)
            </td>
            <td>
                @Html.DisplayFor( p => element.Description)
            </td>
            <td>
                @Html.DisplayFor( p => element.Date)
            </td>
            <td>
                @Html.DisplayFor( p => element.Amount)
            </td>
            <td>
                @Html.DisplayFor( p => element.Category.Name)
            </td>
        </tr>
    }
    </tbody>
</table>